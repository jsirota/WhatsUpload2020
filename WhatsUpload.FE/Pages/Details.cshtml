@model WhatsUpload.FE.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Upload</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            File Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Upload.FilePath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Upload.FileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Upload.FileName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Upload.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Upload.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Upload.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Upload.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Upload.DateAdded)
