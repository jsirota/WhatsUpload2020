@page
@model WhatsUpload.FE.Pages.EditModel

@{
    ViewData["Title"] = "Edit Song";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit Song</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Upload.FileID" />
            <div class="form-group">
                <label asp-for="Upload.FileName" class="control-label"></label>
                <input asp-for="Upload.FileName" class="form-control" readonly />
                <span asp-validation-for="Upload.FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Upload.Name" class="control-label"></label>
                <input asp-for="Upload.Name" class="form-control" />
                <span asp-validation-for="Upload.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Upload.Description" class="control-label"></label>
                <input asp-for="Upload.Description" class="form-control" />
                <span asp-validation-for="Upload.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Upload.DateAdded" class="control-label"></label>
                <input asp-for="Upload.DateAdded" class="form-control" readonly />
                <span asp-validation-for="Upload.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to Your Songs</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
